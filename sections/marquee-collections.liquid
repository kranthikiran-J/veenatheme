  {% comment %} {% schema %}
  {
    "name": "Marquee collection section",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Marquee Collections"
      }
    ],
    "blocks": [
      {
        "type": "custom-block",
        "name": "custom-block",
        "settings": [

          {
            "type": "image_picker",
            "id": "image_collection",
            "label": "collection image"
          },
          {
            "type": "text",
            "id": "pre_heading",
            "label": "Pre Heading",
            "default": "Business Formal Choices"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Explore"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button url"
          }
          
        ]
      }
    ],
    "presets": [
      {
        "name": "Marquee collection Section"
      }
    ]
  }
  {% endschema %} {% endcomment %}

  {% schema %}
{
  "name": "Sliding Text",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 50,
      "step": 1,    
      "unit": "px",
      "label": "Padding from top and bottom",
      "default": 16
    },
    {
      "type": "text",
      "label": "Scroll Time",
      "id": "scroll_time",
      "default": "50"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 8,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 80
    },
    {
      "type": "select",
      "id": "pause_text",
      "label": "Pause text on mouse hover",
      "options": [
        {
          "value": "paused",
          "label": "Yes"
        },
        {
          "value": "initial",
          "label": "No"
        }
      ],
      "default": "initial"
    }
  ],
  "blocks": [
    {
      "name": "Sliding text",
      "type": "block",
      "settings": [
        
    {
      "type": "image_picker",
      "id": "image_picker",
      "label": "Pick category image"
    },
        {
          "type": "text",
          "label": "Add Text",
          "id": "text"
        },
        {
          "type": "checkbox",
          "id": "checkbox",
          "label": "Text-outline",
          "default": false,
          "info": "Make your text visible by outline"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "See All Product"
            
        },
        {
                "type": "url",
                "id": "button_link",
                "label": "Button url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sliding Text"
    }
  ]
}
{% endschema %}