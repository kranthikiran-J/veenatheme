

{% schema %}
{
    "name": "Custom Slideshow",
    "tag": "section",
    "class": "section",
    "settings": [

        {
            "type": "header",
            "content": "Slider options"
        },
        {
            "type": "checkbox",
            "id": "auto_play",
            "label": "Enable autoplay",
            "default":false
        },
        {
            "type": "checkbox",
            "id": "show_pagination",
            "label": "Show dots",
            "default":false
        },
        
        {
            "type": "checkbox",
            "id": "show_arrows",
            "label": "Show arrows",
            "default": false
        },
        {
            "type": "range",
            "id": "auto_play_duration",
            "min": 1000,
            "max": 5000,
            "step": 1000,
            "unit": "sec",
            "label": "Autoplay duration",
            "default": 2000
        },
        {
            "type": "header",
            "content": "Slider options"
        },

        
        {
            "type": "header",
            "content": "Animation Padding"
        },

        {
            "type": "select",
            "id": "slide_animation",
            "label": "Slider animation",
            "options": [
                {
                "value": "fade",
                "label": "Fade"
                },
                {
                    "value": "slide",
                    "label": "Slide"
                },
                {
                        "value": "loop",
                        "label": "Loop"
                }
            ],
            "default": "slide"
            
        }
    ]
}
{% endschema %}