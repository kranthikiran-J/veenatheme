{{ 'bottom-banner.css' | asset_url | stylesheet_tag }}
<div class="banner-content" page-width >
{% comment %} <div class="first-section" page-width > {% endcomment %}
        {%for block in section.blocks %}
            <div class="banner-content--image-container">
            {% comment %} <div class="first-section-block--img-container"> {% endcomment %}
                {% render 'responsive-picture',
                    desktopImage: block.settings.image_desktop,
                    mobileImage: block.settings.image_mobile
                %}
            </div>
            {% comment %} <div class="first-section-block--content"> {% endcomment %}
            <div class="banner-content--text-container">
                <span> {{ block.settings.pre_heading }}</span>
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.description }}</p>
                <a class="button" href="{{ block.settings.button_link }}"><span>{{ block.settings.button_label }}</span></a>
            </div>
        {% endfor %}
</div>


{% schema %}
{
  "name": "Bottom Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Business Formal Choices"
    }
  ],
  "blocks": [
    {
      "type": "custom-block",
      "name": "custom-block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop image",
          "info": "Recommended dimensions: 1440 x 600"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile image",
          "info": "Recommended dimensions: 600 x 400"
        },
        {
          "type": "text",
          "id": "pre_heading",
          "label": "Pre Heading",
          "default": "Business Formal Choices"
        },
        {
          "type": "richtext",
          "id": "title",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "Title"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Business Formal Choices</p>"
           },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Explore"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bottom Banner"
    }
  ]
}
{% endschema %}