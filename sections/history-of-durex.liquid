{{ 'history-of-durex.css' | asset_url | stylesheet_tag }}
<div class="history-section" page-width>
    <div>
        <h3 class="history-section--title">{{ section.settings.heading }}</h3>
    </div>

    {% for block in section.blocks %}
        <div class="history-section--block">
            <div class="history-section--image-text-container">
                <img src="{{ block.settings.image_desktop | image_url }}" class="history-section--desktop" alt="Event Image" width="200" height="200">
                <p class="history-section--text">{{ block.settings.title }}</p>
            </div>
            <div class="history-section--image-row">
                <img src="{{ block.settings.image_line | image_url }}" class="history-section--line" alt="Line Image" width="80" height="2">
                <img src="{{ block.settings.image_mobile | image_url }}" class="history-section--year" alt="Year Image" width="100" height="100">
            </div>
        </div>
    {% endfor %}
</div>


{% schema %}
    {
        "name": "history of durex",
        "tag": "section",
        "class": "section",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "History of Durex"

            }
        ],
        "blocks": [
            {
                "type": "custom-block",
                "name": "custom-block",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image_desktop",
                        "label": "Event image"
                        
                      },
                      {
                        "type": "richtext",
                        "id": "title",
                        "default": "<p>dummy data</p>",
                        "label": "Title"
                      },
                      {
                        "type": "image_picker",
                        "id": "image_mobile",
                        "label": "Year image"
                      },
                      {
                        "type": "image_picker",
                        "id": "image_line",
                        "label": "line image"
                      }
                ]
            }
        ],
        "presets": [
          {
            "name": "History of Durex"
          }
        ]
    }
{% endschema %}