<style>
    .new-arrival-section {
        /* Your styling for the new arrival section */
        margin-bottom: 40px; /* Adjust as needed */
    }

    .new-arrival-section h2 {
        /* Your styling for the section heading */
        text-align: center;
        margin-bottom: 20px;
    }

    .splide__slide {
        /* Styling for individual product slides */
        text-align: center;
        padding: 20px;
    }

    .splide__slide img {
        max-width: 100%;
        height: auto;
        margin-bottom: 10px;
    }

    /* Additional styling as needed */
</style>
<!-- HTML Structure -->
<div class="new-arrival-section">
    <h2>{{ section.settings.heading }}</h2>
    <div class="splide" id="new-arrival-slider">
        <div class="splide__track">
            <ul class="splide__list">
                {% for product in collections[section.settings.collection].products limit:6 %}
                    <li class="splide__slide">
                        <!-- Product HTML content -->
                        <img src="{{ product.images[0].src | image_url }}" alt="{{ product.title }}" width=350 height=350>
                        <h3>{{ product.title }}</h3>
                        <p>{{ product.price | money }}</p>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>



{% schema %}
{
    "name": "New Arrival Section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "New Arrivals"
        },
        {
            "type": "collection",
            "id": "collection",
            "label": "New Arrival Collection"
        }
    ],
    "presets": [
        {
            "name": "New Arrival Section",
            "category": "Products"
        }
    ]
}
{% endschema %}




